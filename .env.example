# JARVIX-MULTISTACK Configuration
# Copia este archivo a .env y edita según necesites

# ============= DATABASE =============
DATABASE_URL=sqlite:///data/jarvix.db
DATABASE_POOL_SIZE=5

# ============= PYTHON / JAX =============
# cpu, gpu, tpu (depende de tu hardware)
JAX_PLATFORM_NAME=cpu

# GPU: CUDA device ID (si tienes múltiples GPUs)
# JAX_DEFAULT_DEVICE=gpu:0

# Memoria: Limitar JAX a cierta RAM
# JAX_PLATFORMS=cpu,gpu
# TF_FORCE_GPU_ALLOW_GROWTH=true

# ============= RUST =============
RUST_LOG=info
RUST_BACKTRACE=1

# ============= NODE.JS =============
NODE_ENV=development
PORT=3000
HOST=localhost

# ============= JULIA =============
JULIA_DEPOT_PATH=./science/.julia

# ============= PROJECT =============
PROJECT_NAME=JARVIX-MULTISTACK
PROJECT_VERSION=1.0.0
PROJECT_ENV=development

# ============= PATHS =============
PYTHON_VENV_PATH=./train/.venv
PYTHON_EXECUTABLE=python3
DATA_PATH=./data
LOGS_PATH=./data/logs

# ============= DEBUG =============
DEBUG=false
VERBOSE=false
